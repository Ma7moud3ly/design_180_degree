<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="input" parent="">
        <item name="android:textColorHint">@color/darkWhite</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="profile.TextView" parent="">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="profile.TextViewBold" parent="profile.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile.Button" parent="">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="circular.imageView.shapeAppearanceOverlay" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>